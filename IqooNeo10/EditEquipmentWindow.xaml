<Window x:Class="IqooNeo10.EditEquipmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактировать оборудование"
        Height="720"
        Width="420"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="#FF58EFBB"
        >
    
    <Grid Margin="15">
        <StackPanel>
            <Label>Название</Label>
            <TextBox x:Name="NameTextBox" MaxLength="60" TextWrapping="Wrap"/>

            <Label>Модель</Label>
            <TextBox x:Name="ModelTextBox" MaxLength="60" TextWrapping="Wrap"/>

            <Label>Производитель</Label>
            <TextBox x:Name="ManufacturerTextBox" MaxLength="60" TextWrapping="Wrap"/>

            <Label>Описание</Label>
            <TextBox x:Name="DescriptionTextBox"
                     Height="70"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     MaxLength="300"
                     VerticalScrollBarVisibility="Auto"/>

            <Label>Цена</Label>
            <TextBox x:Name="PriceTextBox"
                     PreviewTextInput="Price_PreviewTextInput"
                     
                     MaxLength="6"/>

            <Label>Количество</Label>
            <TextBox x:Name="QuantityTextBox"
                     PreviewTextInput="Quantity_PreviewTextInput"
                     
                     MaxLength="2"/>

            <Label>Фото</Label>
            <StackPanel Orientation="Horizontal">
                <Button Content="Выбрать" Width="120" Margin="0,0,5,0" Click="ChooseImage_Click" Background="#FF6C63FF" Foreground="White"/>
                <Button Content="Очистить" Width="120" Click="ClearImage_Click" Background="#FF4A90E2" Foreground="White"/>
            </StackPanel>

            <Border Height="140"
                    Background="White"
                    BorderBrush="#CCC"
                    BorderThickness="1"
                    Margin="0,8"
                    CornerRadius="4">
                <Image x:Name="PreviewImage" Stretch="Uniform"/>
            </Border>

            <TextBlock x:Name="ImagePathLabel"
                       Text="Фото не выбрано"
                       FontSize="12"
                       Margin="0,4"
                       TextWrapping="Wrap"/>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,20,0,0">

                <Button Content="Сохранить"
                        Width="120"
                        Margin="5"
                        Click="Save_Click" Background="#FF4A90E2" Foreground="White"/>

                <Button Content="Отмена"
                        Width="120"
                        Margin="5"
                        Click="Cancel_Click" Background="#FF6C63FF" Foreground="White"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
