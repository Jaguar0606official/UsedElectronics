<Window x:Class="IqooNeo10.HistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="История оборудования"
        Height="600" Width="1350"
        Background="#FF58EFBB"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10" HorizontalAlignment="Center" >
            <TextBlock Text="Название:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox x:Name="NameFilterTextBox" Width="150" MaxLength="60" Margin="0,0,10,0"/>
            <TextBlock Text="Производитель:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox x:Name="ManufacturerFilterTextBox" Width="150" MaxLength="60" Margin="0,0,10,0"/>
            <TextBlock Text="Мин. цена:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox x:Name="MinPriceTextBox" Width="100" PreviewTextInput="Price_PreviewTextInput" Margin="0,0,10,0" DataObject.Pasting="BlockPaste" MaxLength="6"/>
            <TextBlock Text="Макс. цена:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox x:Name="MaxPriceTextBox" Width="100" PreviewTextInput="Price_PreviewTextInput" Margin="0,0,10,0" DataObject.Pasting="BlockPaste" MaxLength="6"/>
            <TextBlock Text="Действие:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <ComboBox x:Name="ActionFilterComboBox" Width="150" Margin="0,0,10,0">
                <ComboBoxItem Content="" IsSelected="True"/>

                <ComboBoxItem Content="Добавлено"/>
                <ComboBoxItem Content="Изменено"/>
                <ComboBoxItem Content="Удалено"/>
                <ComboBoxItem Content="Товар закончился"/>
                <ComboBoxItem Content="Забронировано"/>
            </ComboBox>
            <Button Content="Применить" Width="100" Click="ApplyFilter_Click" Margin="0,0,10,0" Background="#FF6C63FF" Foreground="White"/>
            <Button Content="Сбросить" Width="100" Click="ResetFilter_Click" Background="#FF4A90E2" Foreground="White"/>
        </StackPanel>

        <DataGrid x:Name="HistoryGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="True"
                  IsReadOnly="True"
                  Margin="0,0,0,10"
                  FontSize="14"
                  CanUserAddRows="False"
                  HeadersVisibility="Column"
                  GridLinesVisibility="None"
                  RowBackground="White"
                  AlternatingRowBackground="#F0F8FF"
                  BorderThickness="1"
                  BorderBrush="#B0C4DE"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Назад" Width="100" Margin="5" Click="BackButton_Click" Background="#FF6C63FF" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
