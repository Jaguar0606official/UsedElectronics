<Window x:Class="IqooNeo10.MarketWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Каталог товаров" Height="750" Width="1000"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FF58EFBB">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,10">
            <TextBlock Text="Название:" VerticalAlignment="Center"/>
            <TextBox x:Name="NameFilterTextBox" Width="140" Margin="6,0" MaxLength="60"/>

            <TextBlock Text="Производитель:" VerticalAlignment="Center" Margin="8,0,0,0"/>
            <TextBox x:Name="ManufacturerFilterTextBox" Width="140" Margin="6,0" MaxLength="60"/>

            <TextBlock Text="Мин. цена:" VerticalAlignment="Center" Margin="8,0,0,0"/>
            <TextBox x:Name="MinPriceTextBox" Width="80" Margin="6,0" PreviewTextInput="Price_PreviewTextInput" DataObject.Pasting="BlockPaste" MaxLength="6"/>

            <TextBlock Text="Макс. цена:" VerticalAlignment="Center" Margin="8,0,0,0"/>
            <TextBox x:Name="MaxPriceTextBox" Width="80" Margin="6,0" PreviewTextInput="Price_PreviewTextInput" DataObject.Pasting="BlockPaste" MaxLength="6"/>

            <Button Content="Поиск" Width="80" Margin="6,0" Click="Search_Click" Background="#FF6C63FF" Foreground="White"/>
            <Button Content="Сброс" Width="80" Margin="6,0" Click="Clear_Click" Background="#FF4A90E2" Foreground="White"/>
        </StackPanel>

        <DataGrid x:Name="EquipmentGrid" Grid.Row="1" AutoGenerateColumns="True" IsReadOnly="True"
                  Margin="0,0,0,10" FontSize="14" MouseDoubleClick="EquipmentGrid_MouseDoubleClick"
                  RowBackground="White" AlternatingRowBackground="#F5FFF5" BorderBrush="#A3C1A3" BorderThickness="1"/>

        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center">
            <Button x:Name="AddButton" Content="Добавить" Width="120" Margin="6" Click="Add_Click" Background="#FF4A90E2" Foreground="White"/>
            <Button x:Name="EditButton" Content="Редактировать" Width="120" Margin="6" Click="Edit_Click" Background="#FF6C63FF" Foreground="White"/>
            <Button x:Name="DeleteButton" Content="Удалить" Width="120" Margin="6" Click="Delete_Click" Background="#FF4A90E2" Foreground="White"/>

            <Button Content="Назад" Width="120" Margin="6" Click="Back_Click" Background="#FF6C63FF" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
