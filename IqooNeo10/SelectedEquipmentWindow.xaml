<Window x:Class="IqooNeo10.SelectedEquipmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Информация о товаре" MinHeight="640" MinWidth="880" MaxHeight="700" MaxWidth="880"
        WindowStartupLocation="CenterScreen" Background="#FF58EFBB">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="320"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок окна -->
        <TextBlock Grid.ColumnSpan="2"
                   Text="Информация о выбранном электроприборе"
                   FontSize="22"
                   FontWeight="Bold"
                   Margin="0,0,0,15"/>

        <!-- Левая колонка -->
        <Border Grid.Column="0"
                BorderBrush="#DDD" BorderThickness="1"
                Background="White" CornerRadius="8" Padding="10" Margin="0,44,10,-14" Grid.RowSpan="2">
            <StackPanel>

                <Grid Height="220" Margin="0,0,0,10">
                    <Image x:Name="EquipmentImage" Stretch="Uniform"/>
                    <TextBlock x:Name="NoImageTextBlock"
                               Text="Фотография отсутствует"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Foreground="#888"
                               FontWeight="Bold"
                               FontSize="14"
                               TextWrapping="Wrap"
                               Visibility="Collapsed"/>
                </Grid>

                <TextBlock x:Name="NameTextBlock" FontWeight="Bold" FontSize="16" TextWrapping="Wrap"/>
                <TextBlock x:Name="ManufacturerTextBlock" FontSize="13" Foreground="#666" Margin="0,5,0,0" TextWrapping="Wrap"/>
                <TextBlock x:Name="ModelTextBlock" FontSize="13" Foreground="#666" Margin="0,5,0,0"  TextWrapping="Wrap"/>
                <TextBlock x:Name="PriceTextBlock"
                           FontSize="15" FontWeight="Bold"
                           Foreground="#2E7D32"
                           Margin="0,10,0,0" TextWrapping="Wrap"/>
                <TextBlock x:Name="QuantityTextBlock"
                           FontSize="13" Foreground="#666" Margin="0,5,0,0"/>

                <StackPanel Orientation="Horizontal" Margin="0,10,0,0" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock x:Name="Kolvo" Text="Количество:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <Button x:Name="DecreaseQuantityButton" Content="-" Width="25" Height="25" Click="DecreaseQuantity_Click"/>
                    <TextBox x:Name="QuantityTextBox" Width="50" Text="1" HorizontalContentAlignment="Center" 
                             PreviewTextInput="QuantityTextBox_PreviewTextInput"/>
                    <Button x:Name="IncreaseQuantityButton" Content="+" Width="25" Height="25" Click="IncreaseQuantity_Click"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,20,0,0" HorizontalAlignment="Center">
                    <Button x:Name="ContactButton" Content="Связаться" Width="120" Height="30"
                            Background="#FF4A90E2" Foreground="White" Margin="5,0" Click="ContactButton_Click"/>
                    <Button x:Name="BackButton" Content="Назад" Width="100" Height="30" Margin="5,0" Click="BackButton_Click" Background="#FF6C63FF" Foreground="White"/>
                </StackPanel>

                <StackPanel x:Name="ContactPanel" Margin="0,16,0,0" Visibility="Collapsed">
                    <TextBlock Text="Данные для связи" FontWeight="Bold" Margin="0,0,0,6"/>
                    <TextBlock x:Name="PhoneTextBlock" Text="+7 (999) 555-44-33" FontSize="13"/>
                    <TextBlock x:Name="EmailTextBlock" Text="seller@shop.com" FontSize="13"/>
                </StackPanel>

            </StackPanel>
        </Border>

        <!-- Правая колонка -->
        <Border Grid.Row="1" Grid.Column="1"
                BorderBrush="#DDD" BorderThickness="1"
                Background="White" CornerRadius="8" Padding="15">
            <StackPanel>

                <TextBlock Text="Описание" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                <ScrollViewer VerticalScrollBarVisibility="Auto"
              HorizontalScrollBarVisibility="Auto"
                              MaxHeight="300">
                    <TextBlock x:Name="DescriptionTextBlock"
                           TextWrapping="Wrap"
                           FontSize="13"
                           Foreground="#444"
                           Margin="0,0,0,15"/>
                </ScrollViewer>
                <TextBlock Text="Основные характеристики" FontSize="16" FontWeight="Bold" Margin="0,10,0,10"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Модель:" FontWeight="Bold"/>
                    <TextBlock x:Name="ModelDetailTextBlock" Grid.Row="0" Grid.Column="1" TextWrapping="Wrap"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Производитель:" FontWeight="Bold" Margin="0,5,0,0"/>
                    <TextBlock x:Name="ManufacturerDetailTextBlock" Grid.Row="1" Grid.Column="1" Margin="0,5,0,0" TextWrapping="Wrap"/>
                </Grid>

            </StackPanel>
        </Border>

    </Grid>
</Window>
