<Window x:Class="IqooNeo10.RoleSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выбор роли"
        MinHeight="400" MinWidth="500"
        MaxHeight="400" MaxWidth="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FF58EFBB">

    <Border Margin="20"
            Background="White"
            BorderBrush="#D6DDE5"
            BorderThickness="1"
            CornerRadius="16"
            Padding="20">

        <Grid>
            <StackPanel VerticalAlignment="Center">

                <TextBlock Text="Выберите роль"
                           FontSize="24"
                           FontWeight="SemiBold"
                           Foreground="#2C3E50"
                           HorizontalAlignment="Center"
                           Margin="0 0 0 24"/>

                <Border Background="White"
                        BorderBrush="White"
                        BorderThickness="1"
                        CornerRadius="12"
                        Padding="20">
                    <StackPanel>
                        <Button Content="Покупатель"
                                Click="Buyer_Click"
                                Height="40" Margin="0 10"
                                FontSize="16" Background="#FF6C63FF" Foreground="White"
                                />

                        <Button Content="Продавец / Администратор"
                                Click="SellerOrAdmin_Click"
                                Height="40" Margin="0 10"
                                FontSize="16" Background="#FF4A90E2" Foreground="White"/>
                    </StackPanel>
                </Border>

                <TextBlock Text="Выберите как хотите использовать систему."
                           Margin="0 16 0 0"
                           FontSize="13"
                           Foreground="#4A4A4A"
                           TextAlignment="Center"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
