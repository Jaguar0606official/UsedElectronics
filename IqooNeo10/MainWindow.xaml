<Window x:Class="IqooNeo10.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Авторизация"
        Height="340" Width="450" MinWidth="450" MinHeight="340"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FF58EFBB"
        >
    <Grid>
        <Border Width="400"
                Padding="20"
                CornerRadius="12"
                Background="White"
                BorderBrush="#E0E6ED"
                BorderThickness="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                SnapsToDevicePixels="True">

            <Border.Effect>
                <DropShadowEffect BlurRadius="15" ShadowDepth="2" Opacity="0.15"/>
            </Border.Effect>

            <StackPanel>

                <TextBlock Text="Вход в систему"
                           FontSize="19"
                           FontWeight="SemiBold"
                           Foreground="#2C3E50"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,14"/>

                <TextBlock Text="Логин" FontSize="13" Foreground="#34495E"/>
                <TextBox x:Name="UsernameTextBox"
                         Height="32"
                         Margin="0,4,0,10"
                         Padding="6"
                         FontSize="13"
                         BorderBrush="#BDC3C7"
                         Background="#FAFCFF"
                         MaxLength="34"
                         />
                
                <TextBlock Text="Пароль" FontSize="13" Foreground="#34495E"/>
                <PasswordBox x:Name="PasswordBox"
                             Height="32"
                             Margin="0,4,0,4"
                             Padding="6"
                             FontSize="13"
                             BorderBrush="#BDC3C7"
                             Background="#FAFCFF"
                             MaxLength="35"/>

                <TextBlock x:Name="StatusTextBlock"
                           Foreground="#E74C3C"
                           FontSize="12"
                           Text=""
                           HorizontalAlignment="Center"
                           Margin="0,4,0,6"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,6,0,0">

                    <Button Content="Войти"
                            Width="110"
                            Height="34"
                            Margin="6,0"
                            Background="#FF4A90E2"
                            Foreground="White"
                            FontWeight="SemiBold"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="LoginButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                                    CornerRadius="6"
                                                    Padding="5">
                                                <ContentPresenter HorizontalAlignment="Center"
                                                                  VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#27AE60"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                    <Button Content="Выйти"
                    Width="110"
                    Height="34"
                    Margin="6,0"
                    Background="#FF6C63FF"
                    Foreground="White"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="BackButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="5">
                                                <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#27AE60"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
